<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.orderhistory.ItemOrderHistoryViewModel"
            />

        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/image_product"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                app:imageUrl="@{viewModel.productImage}"
                tools:ignore="ContentDescription"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_5"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                >
                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_100"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginRight="@dimen/dp_100"
                    android:layout_marginStart="@dimen/dp_3"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_serif"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="@dimen/dp_2"
                    android:text="@{viewModel.productName}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    tools:ignore="UnusedAttribute"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/text_date"
                    android:layout_toStartOf="@+id/text_date"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.productPrice}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_gray_white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/title_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity_order_history"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="UnusedAttribute"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/title_quantity"
                    android:layout_toRightOf="@id/title_quantity"
                    android:text="@{viewModel.productQuantity}"
                    android:textColor="@color/color_gray"
                    tools:ignore="RelativeOverlap"
                    />
                <TextView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@{viewModel.status}"
                    android:textColor="@{viewModel.statusColor}"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
