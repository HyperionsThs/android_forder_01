<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.addtocart.AddToCartViewModel"
            />

    </data>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_350"
            android:orientation="vertical"
            android:padding="@dimen/dp_18"
            >
            <ImageView
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_200"
                android:layout_gravity="center"
                app:imageUrl="@{viewModel.productImage}"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="@{viewModel.productName}"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="@{viewModel.productPrice}"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@string/count"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.quantity}"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_add_circle"
                    android:onClick="@{() -> viewModel.onClickUpQuantity()}"
                    tools:ignore="ContentDescription"
                    />
                <ImageButton
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/ic_do_not_disturb_on"
                    android:onClick="@{() -> viewModel.onClickDownQuantity()}"
                    tools:ignore="ContentDescription"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_27"
                    android:background="@drawable/ic_delete"
                    android:backgroundTint="@color/color_red_mos"
                    android:onClick="@{() -> viewModel.onClickRemoveProductInCart()}"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription,UnusedAttribute"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_margin="@dimen/dp_5"
                android:background="@color/color_blue_light"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/your_cart"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@string/number_of_product"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="RelativeOverlap"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginStart="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.productInCart}"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="RelativeOverlap"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@string/all"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="RelativeOverlap"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginStart="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.toTalPriceInCart}"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="RelativeOverlap"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/border_button_continue"
                >
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_40"
                    android:background="@drawable/ic_shopping_cart_white"
                    tools:ignore="ContentDescription"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:background="@color/color_green"
                    android:onClick="@{() -> viewModel.onClickContinueShopping()}"
                    android:text="@string/continue_shopping"
                    android:textColor="@color/color_white"
                    />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</layout>
