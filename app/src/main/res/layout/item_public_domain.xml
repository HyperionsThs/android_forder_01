<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="publicDomain"
            type="com.example.duong.android_forder_01.data.model.Domain"/>

        <variable
            name="publicActionHandler"
            type="com.example.duong.android_forder_01.ui.domain.publicdomain.PublicDomainItemActionHandler"/>

        <import type="android.view.View"/>

        <import type="com.example.duong.android_forder_01.R"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{publicDomain.name}"
                    android:textColor="@color/color_dark_slate_gray"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_number_of_member"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{publicDomain.numberMember}"
                        android:textColor="@color/color_dark_slate_gray"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_number_of_shop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{publicDomain.numberShop}"
                        android:textColor="@color/color_dark_slate_gray"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_number_of_product"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{publicDomain.numberProduct}"
                        android:textColor="@color/color_dark_slate_gray"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_10"
                android:background="@color/colorAccent"
                android:text="@string/action_join_domain"
                android:textAllCaps="false"
                android:visibility="@{(publicDomain.isJoined == 0 &amp;&amp; publicDomain.isOwner == 0 &amp;&amp; publicDomain.isPrivate == 0) ? View.VISIBLE : View.GONE}"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>