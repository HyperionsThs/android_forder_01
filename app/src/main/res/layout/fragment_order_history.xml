<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.orderhistory.OrderHistoryViewModel"
            />

        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_header_profile"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="@string/your_order_history"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_date"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_15"
                        />

                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:focusable="false"
                        android:inputType="date"
                        android:onClick="@{()-> viewModel.onClickStartDate()}"
                        android:text="@={viewModel.startDate}"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_15"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_date"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_15"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:inputType="date"
                        android:onClick="@{()-> viewModel.onClickEndDate()}"
                        android:text="@={viewModel.endDate}"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_15"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:onClick="@{()-> viewModel.onChangeFilter()}"
                        android:textAlignment="center"
                        android:textSize="@dimen/sp_16"
                        />

                    <Button
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_25"
                        android:background="@drawable/button"
                        android:onClick="@{()-> viewModel.onFilter()}"
                        android:text="@string/filter"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        />

                </TableRow>
            </TableLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ExpandableListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="@dimen/dp_5"
                android:scrollbars="none"
                android:visibility="@{viewModel.haveData ? View.VISIBLE : View.GONE}"
                app:adapter="@{viewModel.orderHistoryAdapter}"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.haveData ? View.GONE : View.VISIBLE}"
                >
                <ImageView
                    android:id="@+id/img_no_data"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_120"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_no_data"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_no_data"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/no_data"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp_24"
                    />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
