<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.framgia.forder.screen.orderhistoryshop.OrderHistoryShopViewModel"
            />
        <import type="android.view.View"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/fillter_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.showFilter? View.VISIBLE : View.GONE}"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal"
                        bind:ignore="DisableBaselineAlignment"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="@{()-> viewModel.onClickChooseDateFrom()}"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/from"
                                android:textColor="@color/color_white"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_5"
                                android:gravity="center_horizontal"
                                android:text="@{viewModel.dateFrom}"
                                android:textSize="@dimen/sp_17"
                                style="@style/Hyperlink"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/to"
                                android:textColor="@color/color_white"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_5"
                                android:gravity="center_horizontal"
                                android:onClick="@{()-> viewModel.onClickChooseDateTo()}"
                                android:text="@{viewModel.dateTo}"
                                android:textSize="@dimen/sp_17"
                                style="@style/Hyperlink"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <Button
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_25"
                        android:layout_gravity="right"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/button"
                        android:text="@string/filter"
                        android:onClick="@{()-> viewModel.onClickSearch()}"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        bind:ignore="RtlHardcoded"
                        />
                </LinearLayout>
                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout_home"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="@color/colorAccent"
                    app:tabIndicatorColor="@android:color/white"
                    app:tabSelectedTextColor="@android:color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black"
                    bind:pager="@{viewpager}"
                    />
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:adapter="@{viewModel.adapter}"
                />
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_20"
            android:onClick="@{()-> viewModel.onClickShowFilter()}"
            app:srcCompat="@drawable/ic_search_white"
            />
    </RelativeLayout>
</layout>
