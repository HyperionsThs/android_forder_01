<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="orderDetail"
            type="com.example.duong.android_forder_01.data.model.OrderDetail"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_centerVertical="true"
                app:imageUrl="@{orderDetail.product.collectionImage.image.thumbnail.url}"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/image_product"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{orderDetail.product.name}"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{orderDetail.product.formatPrice}"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="@dimen/sp_15"/>

                </TableRow>

                <TableRow
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/title_quantity + orderDetail.quantity}"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/sp_15"/>

                    <FrameLayout
                        android:id="@+id/frame_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_20"
                            android:background="@color/color_blue"
                            android:gravity="center"
                            android:text="@string/title_pending"
                            android:textColor="@android:color/white"
                            android:visibility="@{orderDetail.pendingStatus ? View.VISIBLE : View.GONE}"/>

                        <TextView
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_20"
                            android:background="@color/color_red"
                            android:gravity="center"
                            android:text="@string/title_reject"
                            android:textColor="@android:color/white"
                            android:visibility="@{orderDetail.rejectStatus ? View.VISIBLE : View.GONE}"/>

                        <TextView
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_20"
                            android:background="@color/color_green"
                            android:gravity="center"
                            android:text="@string/title_accept"
                            android:textColor="@android:color/white"
                            android:visibility="@{orderDetail.acceptStatus ? View.VISIBLE : View.GONE}"/>
                    </FrameLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
