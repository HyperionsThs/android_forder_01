<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.domainmanagement.ItemDomainManagementViewModel"
            />

        <import type="android.view.View"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_2"
        android:background="@drawable/border_comment"
        android:padding="@dimen/dp_2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_5"
                    android:text="@{viewModel.name}"
                    android:textColor="@color/color_orange_mos"
                    android:textStyle="bold"
                    app:leftDrawableText="@{viewModel.imageStatus}"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginStart="@dimen/dp_7"
                        android:layout_weight="1"
                        android:onClick="@{()-> viewModel.onClickShowListUserInDomain()}"
                        android:text="@{viewModel.totalUser}"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{()-> viewModel.onClickShowListShopInDomain()}"
                        android:text="@{viewModel.totalShop}"
                        />
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@{viewModel.totalProduct}"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_button_domain"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/button_red"
                    android:gravity="center"
                    android:onClick="@{()-> viewModel.onClickLeaveDomain()}"
                    android:text="@string/leave"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sp_10"
                    android:visibility="@{viewModel.member ? View.VISIBLE : View.GONE}"
                    tools:ignore="SpUsage"
                    />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
