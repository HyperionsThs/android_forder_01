<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.domainmanagement.ItemDomainManagementViewModel"
            />

        <import type="android.view.View"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        android:background="@drawable/border_comment"
        android:padding="@dimen/dp_2"
        app:cardCornerRadius="@dimen/dp_2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:background="@color/color_white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_5"
                    android:text="@{viewModel.name}"
                    android:textColor="@color/color_orange_mos"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    app:leftDrawableText="@{viewModel.imageStatus}"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_gray_white"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_70"
                    android:layout_marginStart="@dimen/dp_7"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="NestedWeights,UseCompoundDrawables"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_23"
                            android:layout_height="@dimen/dp_23"
                            android:background="@drawable/ic_person_selected"
                            android:backgroundTint="@color/colorPrimary"
                            tools:ignore="ContentDescription,UnusedAttribute"
                            />
                        <TextView
                            android:layout_width="@dimen/dp_110"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginStart="@dimen/dp_3"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@{viewModel.totalUser}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UseCompoundDrawables"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_23"
                            android:layout_height="@dimen/dp_23"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_store_24dp"
                            tools:ignore="ContentDescription"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginStart="@dimen/dp_3"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@{viewModel.totalShop}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                tools:ignore="UselessParent"
                >
                <ImageButton
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/ic_exit"
                    android:backgroundTint="@color/color_dark_slate_gray"
                    android:onClick="@{()-> viewModel.onClickLeaveDomain()}"
                    android:scaleType="centerCrop"
                    android:visibility="@{viewModel.member ? View.VISIBLE : View.GONE}"
                    tools:ignore="ContentDescription,RtlHardcoded,UnusedAttribute"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageButton
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/ic_edits"
                        android:backgroundTint="@color/color_dark_slate_gray"
                        android:gravity="center"
                        android:onClick="@{()-> viewModel.onClickEditDomain()}"
                        android:scaleType="centerCrop"
                        android:visibility="@{viewModel.owner ? View.VISIBLE : View.GONE}"
                        tools:ignore="ContentDescription,UnusedAttribute"
                        />
                    <ImageButton
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/ic_delete"
                        android:backgroundTint="@color/color_dark_slate_gray"
                        android:gravity="center"
                        android:onClick="@{()-> viewModel.onClickDeleteDomain()}"
                        android:scaleType="centerCrop"
                        android:visibility="@{viewModel.ownerMember ? View.VISIBLE : View.GONE}"
                        tools:ignore="ContentDescription,UnusedAttribute"
                        />
                </LinearLayout>
            </FrameLayout>
            <ImageButton
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:adjustViewBounds="true"
                android:background="@drawable/three_dots_horizontal"
                android:scaleType="centerCrop"
                app:showPopupMenuUserAndShop="@{viewModel::onMenuItemClick}"
                tools:ignore="ContentDescription"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
