<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="user"
            type="com.example.duong.android_forder_01.data.model.User"/>

        <variable
            name="userActionHandler"
            type="com.example.duong.android_forder_01.ui.domain.detaildomain.memberdomain.MemberDomainItemActionHandler"/>

        <import type="android.view.View"/>

        <import type="com.example.duong.android_forder_01.R"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_email"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{user.userName}"
                        android:textColor="@color/color_dark_slate_gray"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_username"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{user.fullName}"
                        android:textColor="@color/color_dark_slate_gray"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_chatwork_id"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(user.id)}"
                        android:textColor="@color/color_dark_slate_gray"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@color/colorAccent"
                    android:text="@string/action_delete"
                    android:textAllCaps="false"
                    android:visibility="@{(user.isMember == 1 &amp;&amp; user.owner == 0  &amp;&amp; user.role == 0)  ? View.VISIBLE : View.GONE}"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@color/colorAccent"
                    android:text="@string/action_manage"
                    android:textAllCaps="false"
                    android:visibility="@{(user.isMember == 1 &amp;&amp; user.owner == 0 &amp;&amp; user.role == 0)  ? View.VISIBLE : View.GONE}"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@color/colorAccent"
                    android:text="@string/action_cance_manage"
                    android:textAllCaps="false"
                    android:visibility="@{(user.isMember == 1 &amp;&amp; user.role == 1 &amp;&amp; user.owner == 0)  ? View.VISIBLE : View.GONE}"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@color/colorAccent"
                    android:text="@string/action_add_member"
                    android:textAllCaps="false"
                    android:visibility="@{(user.isMember == 0 &amp;&amp; user.role == 0 &amp;&amp; user.owner == 0)  ? View.VISIBLE : View.GONE}"/>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>