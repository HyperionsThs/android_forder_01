<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.requestshopindomain.ItemRequestShopInDomain"
            />

        <import type="android.view.View"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_90"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:imageUrl="@{viewModel.shopImage}"
                tools:ignore="ContentDescription"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/text_shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_7"
                        android:text="@{viewModel.name}"
                        android:textColor="@color/color_orange_mos"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_shop_name"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@{viewModel.description}"
                        android:textColor="@color/color_gray"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:drawableTint="@color/color_gray"
                        android:drawableTop="@drawable/ic_local_dining_24dp"
                        android:gravity="center"
                        android:text="@{viewModel.numberProduct}"
                        android:textColor="@color/color_gray"
                        android:textSize="@dimen/sp_15"
                        tools:ignore="UnusedAttribute"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_gray_white"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    tools:ignore="RtlHardcoded"
                    >
                    <TextView
                        android:id="@+id/text_reject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        android:drawableLeft="@drawable/ic_reject"
                        android:drawablePadding="@dimen/dp_2"
                        android:drawableStart="@drawable/ic_reject"
                        android:gravity="center_vertical"
                        android:onClick="@{() -> viewModel.onClickRejectShop()}"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingStart="@dimen/dp_5"
                        android:text="@string/reject"
                        android:textColor="@color/color_red_mos"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_accept"
                        android:drawableStart="@drawable/ic_accept"
                        android:gravity="center_vertical"
                        android:onClick="@{() -> viewModel.onClickAcceptShop()}"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingStart="@dimen/dp_5"
                        android:text="@string/accept"
                        android:textColor="@color/color_orange_mos"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
