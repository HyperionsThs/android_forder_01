<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.shopindomain.ItemShopInDomainViewModel"
            />

        <import type="android.view.View"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/border_comment"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_3"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:adjustViewBounds="true"
                android:padding="@dimen/dp_3"
                android:scaleType="centerCrop"
                app:imageUrl="@{viewModel.imageShop}"
                tools:ignore="ContentDescription"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginStart="@dimen/dp_3"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"
                    tools:ignore="UselessParent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <ImageView
                                    android:id="@+id/image_shop"
                                    android:layout_width="@dimen/dp_25"
                                    android:layout_height="@dimen/dp_25"
                                    android:background="@drawable/ic_store_red_500"
                                    android:backgroundTint="@color/color_orange_mos"
                                    android:scaleType="center"
                                    tools:ignore="ContentDescription,UnusedAttribute"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dp_60"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_60"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_toEndOf="@id/image_shop"
                                    android:layout_toRightOf="@id/image_shop"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="@{viewModel.shopName}"
                                    android:textColor="@color/color_orange_mos"
                                    android:textSize="@dimen/sp_17"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:text="@{viewModel.status}"
                                    android:textAllCaps="true"
                                    android:textColor="@color/color_green"
                                    android:textStyle="bold"
                                    app:colorText="@{viewModel.statusColor}"
                                    tools:ignore="RelativeOverlap"
                                    />
                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:background="@color/color_gray_white"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_40"
                                android:layout_marginRight="@dimen/dp_40"
                                android:layout_marginTop="@dimen/dp_5"
                                android:orientation="horizontal"
                                tools:ignore="UseCompoundDrawables"
                                >
                                <ImageView
                                    android:layout_width="@dimen/dp_25"
                                    android:layout_height="@dimen/dp_25"
                                    android:background="@drawable/ic_local_dining_24dp"
                                    tools:ignore="ContentDescription"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:text="@{viewModel.totalProduct}"
                                    tools:ignore="InefficientWeight"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:orientation="horizontal"
                                tools:ignore="UseCompoundDrawables"
                                >
                                <ImageView
                                    android:layout_width="@dimen/dp_25"
                                    android:layout_height="@dimen/dp_25"
                                    android:background="@drawable/ic_person_red_500"
                                    android:backgroundTint="@color/color_orange_mos"
                                    tools:ignore="ContentDescription,UnusedAttribute"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:layout_weight="4"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{viewModel.ownerName}"
                                    tools:ignore="InefficientWeight"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_3"
                                    android:layout_marginStart="@dimen/dp_3"
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:background="@color/color_green"
                                    android:onClick="@{() -> viewModel.onClickSeeAllManager()}"
                                    android:padding="@dimen/dp_5"
                                    android:text="@string/see_manager"
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/sp_10"
                                    tools:ignore="SpUsage"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/dp_5"
                            android:background="@drawable/ic_delete"
                            android:onClick="@{() -> viewModel.onClickDeleteShop()}"
                            android:scaleType="centerCrop"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/sp_10"
                            android:visibility="@{viewModel.owner ? View.VISIBLE : View.GONE}"
                            tools:ignore="ContentDescription,SpUsage"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
