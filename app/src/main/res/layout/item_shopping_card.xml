<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="shoppingCardDetail"
            type="com.example.duong.android_forder_01.data.model.ShoppingCardDetail"/>

        <variable
            name="actionHandler"
            type="com.example.duong.android_forder_01.ui.shopping_card.ShoppingCardActionHandler"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5"
            >

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_130"
                android:scaleType="centerCrop"
                app:imageUrl="@{shoppingCardDetail.product.image}"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5"
                    >

                    <TextView
                        android:id="@+id/text_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="@{shoppingCardDetail.product.name}"
                        />

                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{shoppingCardDetail.product.price}"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_dark"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageButton
                            android:id="@+id/button_reduce_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:onClick="@{actionHandler.reduceQuantity(shopping_card_detail.id)}"
                            android:padding="@dimen/dp_5"
                            android:src="@drawable/ic_remove_black"
                            />

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_5"
                            android:background="@color/color_gray"
                            />

                        <TextView
                            android:id="@+id/text_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:text="@{shoppingCardDetail.quantity}"
                            android:textSize="@dimen/sp_18"
                            />

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_5"
                            android:background="@color/color_gray"
                            />

                        <ImageButton
                            android:id="@+id/button_increase_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:onClick="@{actionHandler.increaseQuantity(shopping_card_detail.id)}"
                            android:padding="@dimen/dp_5"
                            android:src="@drawable/ic_add_black"
                            />
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/button_delete_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:onClick="@{actionHandler.deleteItem(shopping_card_detail.id)}"
                    android:src="@drawable/ic_delete_black"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
