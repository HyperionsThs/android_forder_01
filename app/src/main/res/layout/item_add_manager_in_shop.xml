<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.addmanagershop.ItemAddManagerInShopViewModel"
            />
        <import type="android.view.View"/>

    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_5"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            >
            <com.framgia.forder.widgets.CircleImageView
                android:id="@+id/image_avatar"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:padding="@dimen/dp_5"
                app:imageUrlUser="@{viewModel.avatar}"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@+id/image_avatar"
                android:layout_toLeftOf="@+id/button_set_manager"
                android:layout_toRightOf="@+id/image_avatar"
                android:layout_toStartOf="@+id/button_set_manager"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.name}"
                    android:textColor="@color/color_gray_mos"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_orange"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.email}"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/button_set_manager"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/button_blue"
                android:gravity="center"
                android:text="@string/add"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
