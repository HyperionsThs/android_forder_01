<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.duong.android_forder_01.utils.LayoutManagers"/>

        <variable
            name="closeOrder"
            type="com.example.duong.android_forder_01.ui.shopmanagementdetail.ordershop.closeorder.CloseOrderFragment"/>

        <variable
            name="actionHandler"
            type="com.example.duong.android_forder_01.ui.shopmanagementdetail.ordershop.closeorder.CloseOrderActionHandler"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/card_view"
            android:layout_alignParentTop="true"
            app:adapter="@{closeOrder.closeOrderAdapter}"
            app:layoutManager="@{LayoutManagers.linear}"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            app:cardCornerRadius="@dimen/dp_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5">

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/button_blue"
                    android:onClick="@{()-> actionHandler.backToCheckOrder()}"
                    android:text="@string/action_back"
                    android:textAllCaps="false"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/button_done"
                    android:layout_toRightOf="@+id/button_back"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_5"
                        android:text="@string/title_total_price"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_18"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{closeOrder.totalPrice}"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="@dimen/sp_18"/>
                </LinearLayout>


                <Button
                    android:id="@+id/button_done"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_green"
                    android:onClick="@{()-> actionHandler.done()}"
                    android:text="@string/action_done"
                    android:textAllCaps="false"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</layout>
