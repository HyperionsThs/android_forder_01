<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="viewModel"
            type="com.framgia.forder.screen.cart.ItemShoppingCartViewModel"
            />
        <import type="android.view.View"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/image_product"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_80"
                android:layout_margin="@dimen/dp_5"
                android:scaleType="centerCrop"
                app:imageUrl="@{viewModel.productImage}"
                tools:ignore="ContentDescription"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5"
                    >
                    <TextView
                        android:id="@+id/text_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@{viewModel.productName}"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_15"
                        />
                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.price}"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_dark"
                        />
                    <TextView
                        android:id="@+id/text_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_5"
                        android:text="@{viewModel.orderTime}"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="italic"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.2"
                    android:onClick="@{()-> viewModel.clickIconWarning()}"
                    android:src="@drawable/ic_warning"
                    android:visibility="@{viewModel.productTimeOut ? View.VISIBLE : View.GONE}"
                    tools:ignore="ContentDescription"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/dp_10"
                    >
                    <ImageButton
                        android:id="@+id/button_down_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:onClick="@{()-> viewModel.upQuantity()}"
                        app:srcCompat="@drawable/ic_arrow_up"
                        tools:ignore="ContentDescription"
                        />
                    <TextView
                        android:id="@+id/text_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.quantity}"
                        android:textSize="@dimen/sp_15"
                        />
                    <ImageButton
                        android:id="@+id/button_up_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:onClick="@{()-> viewModel.downQuantity()}"
                        app:srcCompat="@drawable/ic_arrow_down"
                        tools:ignore="ContentDescription"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>
