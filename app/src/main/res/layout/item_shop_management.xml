<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="shopInfo"
            type="com.example.duong.android_forder_01.data.model.ShopInfo"/>

        <variable
            name="shopDomain"
            type="com.example.duong.android_forder_01.data.model.ShopDomain"/>

        <variable
            name="actionHandler"
            type="com.example.duong.android_forder_01.ui.shopmanagement.ShopManagementActivityActionHandler"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blue_white"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_place"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/ic_place"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{shopInfo.domainName}"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/sp_18"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/button_request"
                    android:stretchColumns="*">

                    <TableRow>

                        <TextView
                            style="@style/TextShopManagement"
                            android:text="@string/title_number_of_member"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@{String.valueOf(shopInfo.numberOfUsers)}"
                            android:textSize="@dimen/sp_15"/>

                        <TextView
                            style="@style/TextShopManagement"
                            android:text="@string/title_shops"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@{String.valueOf(shopInfo.numberOfShops)}"
                            android:textSize="@dimen/sp_15"/>
                    </TableRow>

                    <TableRow>

                        <TextView
                            style="@style/TextShopManagement"
                            android:text="@string/title_products"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@{String.valueOf(shopInfo.numberOfProducts)}"
                            android:textSize="@dimen/sp_15"/>

                        <TextView
                            style="@style/TextShopManagement"
                            android:text="@string/title_status"/>

                        <TextView
                            android:gravity="left"
                            android:text="@{shopDomain.status ? @string/title_status_accepted : @string/title_status_pending}"
                            android:textColor="@{shopDomain.status ? @color/color_green : @color/color_red}"
                            android:textSize="@dimen/sp_15"/>
                    </TableRow>
                </TableLayout>

                <Button
                    android:id="@+id/button_request"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@{shopDomain.status ? @color/color_red : @color/color_blue}"
                    android:text="@{shopDomain.status ? @string/action_cancel : @string/action_request}"
                    android:textAllCaps="false"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>
