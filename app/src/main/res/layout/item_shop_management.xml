<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="shopInfo"
            type="com.example.duong.android_forder_01.data.model.ShopInfo"/>

        <variable
            name="shopDomain"
            type="com.example.duong.android_forder_01.data.model.ShopDomain"/>

        <variable
            name="actionHandler"
            type="com.example.duong.android_forder_01.ui.shopmanagement.ShopManagementActivityActionHandler"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:padding="@dimen/dp_10"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        style="@style/TextShopManagement"
                        android:text="@string/title_domain"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{shopInfo.domainName}"/>

                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/TextShopManagement"
                        android:text="@string/title_number_of_member"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{String.valueOf(shopInfo.numberOfUsers)}"/>

                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/TextShopManagement"
                        android:text="@string/title_number_of_shop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{String.valueOf(shopInfo.numberOfShops)}"/>

                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/TextShopManagement"
                        android:text="@string/title_number_of_product"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{String.valueOf(shopInfo.numberOfProducts)}"/>

                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/TextShopManagement"
                        android:text="@string/title_status"/>

                    <TextView
                        android:gravity="center"
                        android:text="@{shopDomain.status ? @string/title_status_accepted : @string/title_status_pending}"
                        android:textColor="@{shopDomain.status ? @color/color_green : @color/color_red}"
                        android:textSize="@dimen/dp_16"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="0.7"
                        android:text="@string/title_request"
                        android:textStyle="bold"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="0.3"
                        android:background="@{shopDomain.status ? @color/color_red : @color/color_blue}"
                        android:text="@{shopDomain.status ? @string/action_cancel : @string/action_request}"
                        android:textAllCaps="false"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>