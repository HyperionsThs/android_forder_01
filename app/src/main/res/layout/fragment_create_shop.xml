<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.createshop.CreateshopViewModel"
            />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/create_new_shop"
                android:textColor="@color/color_orange_mos"
                android:textSize="@dimen/sp_30"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/boder_title"
                android:orientation="vertical"
                android:padding="@dimen/dp_10"

                >
                <EditText
                    android:id="@+id/text_title_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/shop_name"
                    android:text="@={viewModel.name}"
                    android:textSize="@dimen/sp_14"
                    app:errorText="@{viewModel.nameError}"
                    />
                <EditText
                    android:id="@+id/text_description_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    android:text="@={viewModel.description}"
                    android:textSize="@dimen/sp_14"
                    app:errorText="@{viewModel.descriptionError}"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@{viewModel.openTime}"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/open_time"
                        android:textColor="@color/color_black"
                        />
                    <ImageButton
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:contentDescription="@string/open_time"
                        android:onClick="@{()-> viewModel.onClickChooseOpenTime()}"
                        app:srcCompat="@drawable/ic_time"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/open_forever"
                        android:textColor="@color/color_black"
                        />
                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_marginStart="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_5"
                        android:onCheckedChanged="@{() -> viewModel.onChecked()}"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/auto_reject_time"
                        android:textColor="@color/color_black"
                        />
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@{viewModel.autoRejectTime}"
                        />
                    <ImageButton
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:contentDescription="@string/auto_reject_time"
                        android:onClick="@{()-> viewModel.onClickChooseAutoRejectTime()}"
                        app:srcCompat="@drawable/ic_time"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/cover_image"
                        android:textColor="@color/color_black"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="@dimen/dp_200"
                            android:layout_height="@dimen/dp_100"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/border_comment"
                            android:contentDescription="@string/cover_image"
                            android:scaleType="centerCrop"
                            app:imageUrl="@{viewModel.imageCover}"
                            />
                        <Button
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/border_button_choose_image"
                            android:onClick="@{()-> viewModel.onClickChooseCoverImage()}"
                            android:text="@string/choose_image"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/avatar"
                        android:textColor="@color/color_black"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/border_comment"
                            android:scaleType="centerCrop"
                            app:imageUrl="@{viewModel.imageAvatar}"
                            tools:ignore="ContentDescription"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_110"
                            android:layout_marginStart="@dimen/dp_110"
                            android:background="@drawable/border_button_choose_image"
                            android:contentDescription="@string/avatar"
                            android:onClick="@{()-> viewModel.onClickChooseAvatar()}"
                            android:text="@string/choose_image"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="@dimen/dp_170"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/border_button_next"
                android:onClick="@{()-> viewModel.onClickCreateShop()}"
                android:text="@string/create"
                android:textColor="@color/color_orange_mos"
                />
        </LinearLayout>
    </ScrollView>
</layout>
