<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.shopupdate.ShopUpdateViewModel"
            />

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_comment"
                android:gravity="center"
                android:text="@string/edit_shop"
                android:textSize="@dimen/sp_30"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_comment"
                android:orientation="vertical"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_store_orange"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_store_orange"
                    android:text="@={viewModel.name}"
                    app:errorText="@{viewModel.nameError}"
                    tools:ignore="TextFields"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_description_orange_note_orange_mos"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_description_orange_note_orange_mos"
                    android:text="@={viewModel.description}"
                    app:errorText="@{viewModel.descriptionError}"
                    tools:ignore="TextFields"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/border_layout"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_time_orange"
                            android:drawableStart="@drawable/ic_time_orange"
                            android:gravity="center_vertical"
                            android:text="@string/open_time"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@{viewModel.openTime}"
                                android:textStyle="bold"
                                />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:onClick="@{() -> viewModel.onClickChooseOpenTime()}"
                                android:text="@string/choose_time"
                                tools:ignore="RelativeOverlap"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_cart_shop"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/open_daily"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:checked="@{viewModel.openForever}"
                            android:onCheckedChanged="@{() -> viewModel.checked()}"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:drawableLeft="@drawable/ic_time_orange"
                        android:drawableStart="@drawable/ic_time_orange"
                        android:gravity="center_vertical"
                        android:text="@string/time_automatically_refused_order"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_marginStart="@dimen/dp_30"
                            android:gravity="center_vertical"
                            android:text="@{viewModel.timeAutoReject}"
                            android:textStyle="bold"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:onClick="@{() -> viewModel.onClickChooseAutoRejectTime()}"
                            android:text="@string/choose_time"
                            tools:ignore="RelativeOverlap"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/border_layout"
                android:orientation="vertical"
                android:padding="@dimen/dp_10"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:id="@+id/text_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        tools:ignore="UseCompoundDrawables"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            app:srcCompat="@drawable/ic_image_photo"
                            tools:ignore="ContentDescription"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:text="@string/avatar"
                            android:textColor="@color/color_black"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/image_avatar"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_below="@id/text_avatar"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/border_layout"
                        android:backgroundTint="@color/color_gray_white"
                        android:padding="@dimen/dp_5"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{viewModel.imageAvatar}"
                        tools:ignore="ContentDescription,UnusedAttribute"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/image_avatar"
                        android:layout_gravity="center"
                        android:layout_marginLeft="19dp"
                        android:layout_marginStart="19dp"
                        android:layout_toEndOf="@+id/image_avatar"
                        android:layout_toRightOf="@+id/image_avatar"
                        android:background="@color/transparent"
                        android:contentDescription="@string/avatar"
                        android:onClick="@{()-> viewModel.onClickChooseAvatar()}"
                        app:srcCompat="@drawable/ic_add_image"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:id="@+id/text_image_cover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_10"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_image_photo"
                            tools:ignore="ContentDescription"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:text="@string/cover_image"
                            android:textColor="@color/color_black"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/image_cover"
                        android:layout_width="@dimen/dp_250"
                        android:layout_height="@dimen/dp_150"
                        android:layout_below="@+id/text_image_cover"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/border_layout"
                        android:backgroundTint="@color/color_gray_white"
                        android:contentDescription="@string/cover_image"
                        android:padding="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingStart="@dimen/dp_2"
                        android:paddingTop="@dimen/dp_5"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{viewModel.imageCover}"
                        tools:ignore="UnusedAttribute"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_toEndOf="@+id/image_cover"
                        android:layout_toRightOf="@+id/image_cover"
                        android:background="@color/transparent"
                        android:onClick="@{()-> viewModel.onClickChooseCoverImage()}"
                        app:srcCompat="@drawable/ic_add_image"
                        tools:ignore="ContentDescription,RelativeOverlap"
                        />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="@{()-> viewModel.onClickUpdateShop()}"
                android:text="@string/save"
                />
        </LinearLayout>
    </ScrollView>
</layout>
