<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.shopinfo.listdomain.ItemListDomainViewModel"
            />

    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/border_button"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_8"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_gray_white"
            android:orientation="vertical"
            tools:ignore="UselessLeaf"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/image_location"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/ic_location"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/image_location"
                    android:layout_toLeftOf="@+id/text_status"
                    android:layout_toRightOf="@+id/image_location"
                    android:layout_toStartOf="@+id/text_status"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@{viewModel.domainName}"
                    android:textColor="@color/color_blue_mos"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_3"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/border_button"
                    android:backgroundTint="@color/color_blue_light"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@{viewModel.status}"
                    tools:ignore="UnusedAttribute"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white_light"
                android:orientation="horizontal"
                android:weightSum="4.5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_people_24dp"
                    android:gravity="center_horizontal"
                    android:text="@{viewModel.numberUser}"
                    android:textColor="@color/color_blue_mos"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_store_24dp"
                    android:gravity="center_horizontal"
                    android:text="@{viewModel.numberShop}"
                    android:textColor="@color/color_blue_mos"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_local_dining_24dp"
                    android:gravity="center_horizontal"
                    android:text="@{viewModel.numberProduct}"
                    android:textColor="@color/color_blue_mos"
                    android:textStyle="bold"
                    />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/button_blue"
                        android:text="@string/request"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
