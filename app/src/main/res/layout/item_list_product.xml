<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.framgia.forder.screen.mainpage.product.ItemProductViewModel"
            />
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/border"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{()-> viewModel.onItemClicked()}"
        android:padding="@dimen/dp_7"
        app:cardCornerRadius="@dimen/dp_8"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/image_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:imageUrl="@{viewModel.productImage}"
                    tools:ignore="ContentDescription"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/border_price"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:text="@{viewModel.productPrice}"
                    android:textColor="@color/color_red_mos"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/image_product"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/border_button_next"
                    android:src="@drawable/ic_cart_shop"
                    bind:onClickShowPopupMenuOrder="@{viewModel::onMenuItemClick}"
                    tools:ignore="ContentDescription,UnusedAttribute,VectorDrawableCompat"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_gray_mos"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@{viewModel.orderTime}"
                android:textColor="@color/color_white"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_2"
                android:paddingTop="@dimen/dp_2"
                android:text="@{viewModel.productName}"
                android:textColor="@color/color_orange_mos"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_margin="@dimen/dp_3"
                android:background="@color/color_gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_4"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:paddingEnd="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:paddingStart="@dimen/dp_3"
                android:text="@{viewModel.description}"
                android:textColor="@color/color_gray"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
