<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.orderhistoryshop.listrejectorders.ListRejectOrdersViewModel"
            />

        <import type="android.view.View"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_1"
        app:cardCornerRadius="@dimen/dp_5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_layout"
            android:orientation="vertical"
            android:padding="@dimen/dp_5"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                >
                <ImageView
                    android:id="@+id/image_status"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_number_of_product"
                    android:backgroundTint="@color/color_red_mos"
                    tools:ignore="ContentDescription,UnusedAttribute"
                    />
                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginRight="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_3"
                    android:layout_toEndOf="@+id/image_status"
                    android:layout_toRightOf="@+id/image_status"
                    android:fontFamily="@string/font_serif"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_2"
                    android:text="@{viewModel.timeCreateOrder}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    tools:ignore="UnusedAttribute"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:background="@drawable/border_number"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/text_date"
                    android:layout_toStartOf="@+id/text_date"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.price}"
                    android:textColor="@color/color_red_mos"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_gray_white"
                />
            <TextView
                android:id="@+id/text_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.nameProduct}"
                android:textColor="@color/color_orange_mos"
                android:textSize="@dimen/sp_14"
                tools:ignore="UnusedAttribute"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.quantity}"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
