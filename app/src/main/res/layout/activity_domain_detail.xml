<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="activityDetailDomain"
            type="com.example.duong.android_forder_01.ui.domain.detaildomain.DetailDomainActivity"/>

    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout_detail_domain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                app:tabSelectedTextColor="@color/colorAccent"
                app:tabTextAppearance="@style/TabLayoutStyle"
                app:tabTextColor="@color/cardview_dark_background"
                bind:pager="@{viewpager}"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/app_bar"
                bind:adapter="@{activityDetailDomain.adapter}"/>
        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>
</layout>