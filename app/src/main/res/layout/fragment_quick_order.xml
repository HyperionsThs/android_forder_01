<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.quickorder.QuickOrderViewModel"
            />

    </data>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_300"
            android:orientation="vertical"
            android:padding="@dimen/dp_18"
            >
            <ImageView
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                android:layout_gravity="center"
                app:imageUrl="@{viewModel.productImage}"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="@{viewModel.productName}"
                android:textColor="@color/color_red_light"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="@{viewModel.productPrice}"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/button_down_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_remove_black"
                    android:onClick="@{()-> viewModel.downQuantity()}"
                    tools:ignore="ContentDescription,UnusedAttribute"
                    />
                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@color/color_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp_5"
                    android:text="@{viewModel.productNumber}"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/sp_15"
                    />
                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@color/color_black"
                    />
                <ImageView
                    android:id="@+id/button_up_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_add_black"
                    android:onClick="@{()-> viewModel.upQuantity()}"
                    tools:ignore="ContentDescription,UnusedAttribute"
                    />
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_edittext"
                android:gravity="center"
                android:hint="@string/hint_notes"
                android:maxLines="3"
                android:minHeight="@dimen/dp_60"
                android:padding="@dimen/dp_10"
                android:text="@={viewModel.note}"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/border_button_order"
                android:onClick="@{() -> viewModel.onClickOrderNow()}"
                android:text="@string/order_now"
                android:textColor="@color/color_white"
                />
        </LinearLayout>
    </ScrollView>
</layout>
