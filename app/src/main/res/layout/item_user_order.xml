<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="viewModel"
            type="com.framgia.forder.screen.ordershop.ItemGroupOrderViewModel"
            />

    </data>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:backgroundTint="@color/color_gray_white"
        tools:ignore="UnusedAttribute"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/color_white"
                android:paddingBottom="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/dp_3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_30"
                android:paddingTop="@dimen/dp_5"
                android:padding="@dimen/dp_3"
                android:weightSum="2"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingTop="@dimen/dp_3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{viewModel.nameUser}"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="@{viewModel.price}"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingTop="@dimen/dp_3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@{viewModel.timeCreateOrder}"
                        tools:ignore="RelativeOverlap"
                    />
                    <TextView
                        android:onClick="@{() -> viewModel.onClickAcceptOrder()}"
                        android:id="@+id/text_reject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        android:drawableLeft="@drawable/ic_reject"
                        android:drawablePadding="@dimen/dp_2"
                        android:drawableStart="@drawable/ic_reject"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingStart="@dimen/dp_5"
                        android:text="@string/reject"
                        android:textColor="@color/color_red_mos"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap"
                        />
                    <TextView
                        android:onClick="@{() -> viewModel.onClickRejectOrder()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@id/text_reject"
                        android:layout_toStartOf="@id/text_reject"
                        android:drawableLeft="@drawable/ic_accept"
                        android:drawableStart="@drawable/ic_accept"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingStart="@dimen/dp_5"
                        android:text="@string/accept"
                        android:textColor="@color/color_orange_mos"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap"
                        />
                </RelativeLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
