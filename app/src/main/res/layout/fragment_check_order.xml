<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="checkOrder"
            type="com.example.duong.android_forder_01.ui.shopmanagementdetail.ordershop.checkorder.CheckOrderFragment"/>

        <variable
            name="actionHandler"
            type="com.example.duong.android_forder_01.ui.shopmanagementdetail.ordershop.checkorder.CheckOrderActionHandler"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            app:cardCornerRadius="@dimen/dp_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5">

                <ImageButton
                    android:id="@+id/button_select_all"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/ic_select_all"
                    android:onClick="@{()-> actionHandler.checkAll()}"/>

                <ImageButton
                    android:id="@+id/button_accept"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toRightOf="@+id/button_select_all"
                    android:background="@drawable/ic_accept"
                    android:onClick="@{()-> actionHandler.acceptAll()}"/>

                <ImageButton
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/button_accept"
                    android:layout_toRightOf="@+id/button_accept"
                    android:background="@drawable/ic_reject"
                    android:onClick="@{()-> actionHandler.rejectAll()}"/>

                <Button
                    android:id="@+id/button_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_blue"
                    android:onClick="@{()-> actionHandler.continueCheckOrder()}"
                    android:text="@string/action_continue"
                    android:textAllCaps="false"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ExpandableListView
            android:id="@+id/expand_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/card_view"
            android:layout_alignParentTop="true"
            android:scrollbars="none"
            app:adapter="@{checkOrder.checkOrderAdapter}"/>
    </RelativeLayout>
</layout>
