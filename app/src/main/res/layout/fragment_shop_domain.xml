            type="com.example.duong.android_forder_01.ui.domain.detaildomain.shopdomain.ShopDomainFragment"/>

        <import type="com.example.duong.android_forder_01.utils.LayoutManagers"/>

        <import type="android.support.v7.widget.LinearLayoutManager"/>

        <import type="android.view.View"/>

    </data>

    <android.support.v7.widget.RecyclerView
